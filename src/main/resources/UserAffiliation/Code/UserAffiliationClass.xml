          &lt;p&gt;
          #set($hasOne = true)
        #end
        #set($c = $ce[0][0])
        #set($e = $ce[0][1])
        #set($color = $colors.getOrDefault($c, "#dddddd"))
        &lt;span style="display: inline-block; background:$color; border-radius: 10px; padding:1px; padding-left: 9px; padding-right: 9px"&gt;$e&lt;/span&gt;
      #end
    #end
    #if(!$hasOne)
